<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff80"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context="com.example.kapil.calculator.Calci">

    <EditText
        android:enabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/pre"
        android:inputType="numberDecimal"
        android:textSize="35sp"
        android:layout_gravity="end"
        android:focusable="false"
        android:textAlignment="textEnd"
        />
    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:id="@+id/ans"
    android:inputType="numberDecimal"
        android:layout_marginBottom="10dp"
        android:focusable="false"
    android:layout_gravity="end"
    android:textAlignment="textEnd"

    />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="75sp"
            android:text="AC"
            android:layout_marginLeft="4dp"
            android:textSize="20sp"
            android:id="@+id/clear"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="75sp"
            android:text="del"
            android:textSize="20sp"
            android:id="@+id/del"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="75sp"
            android:text="/"
            android:textSize="20sp"
            android:id="@+id/div"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="75sp"
            android:text="*"
            android:textSize="20sp"
            android:id="@+id/prod"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="75sp"
            android:text="7"
            android:layout_marginLeft="4dp"
            android:id="@+id/b7"
            android:textSize="20sp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="75sp"
            android:text="8"
            android:id="@+id/b8"
            android:textSize="20sp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="75sp"
            android:text="9"
            android:id="@+id/b9"
            android:textSize="20sp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="75sp"
            android:text="-"
            android:textSize="20sp"
            android:id="@+id/sub"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="75sp"
            android:text="4"
            android:layout_marginLeft="4dp"
            android:id="@+id/b4"
            android:textSize="20sp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="75sp"
            android:text="5"
            android:id="@+id/b5"
            android:textSize="20sp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="75sp"
            android:text="6"
            android:id="@+id/b6"
            android:textSize="20sp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="75sp"
            android:text="+"
            android:textSize="20sp"
            android:id="@+id/add"
            />
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="75sp"
                    android:text="1"
                    android:layout_marginLeft="4dp"
                    android:id="@+id/b1"
                    android:textSize="20sp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="75sp"
                    android:text="2"
                    android:id="@+id/b2"
                    android:textSize="20sp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="75sp"
                    android:text="3"
                    android:id="@+id/b3"
                    android:textSize="20sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="75sp"
                    android:text="%"
                    android:layout_marginLeft="4dp"
                    android:textSize="20sp"
                    android:id="@+id/perc"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="75sp"
                    android:text="0"
                    android:id="@+id/b0"
                    android:textSize="20sp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="75sp"
                    android:text="."
                    android:id="@+id/pnt"
                    android:textSize="20sp"
                    />
            </LinearLayout>

        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="145sp"
            android:text="="
            android:background="#ffad33"
            android:textSize="20sp"
            android:id="@+id/result"
            />

    </LinearLayout>
</android.support.v7.widget.LinearLayoutCompat>
